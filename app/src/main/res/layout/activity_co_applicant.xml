<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">

<data>

</data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".masum.activity.prospect.co_applicant.CoApplicantActivity">


    <LinearLayout
        android:id="@+id/ll_co_applicant_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_co_applicant_btn_back"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/size_10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="@dimen/size_300dp"
            android:layout_height="match_parent"
            android:text="Prospect Stage: Co Applicant"
            android:textColor="@color/white"
            android:padding="@dimen/size_8dp"/>


    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_co_applicant_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="scrollable"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_co_applicant_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_margin="0dp"
        android:padding="@dimen/size_4dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_24sp" />

</RelativeLayout>

</layout>