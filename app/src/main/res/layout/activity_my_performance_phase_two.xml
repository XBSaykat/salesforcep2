<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPerformancePhaseTwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:padding="@dimen/size_8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="My Perfomance"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">


            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="@dimen/size_16dp">

                <!--1st-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--(1)No of Leads-->
                    <LinearLayout
                        android:id="@+id/ll_my_activities_performance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_8dp"
                        android:background="@color/colorPrimary"
                        android:elevation="@dimen/size_4dp"
                        android:orientation="vertical"
                        android:padding="@dimen/size_4dp">


                        <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:lines="2"
                            android:text="My Activities"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/greyWhite"
                                    android:textSize="@dimen/text_size_12sp" />
                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_size_12sp"
                                    android:textColor="@color/greyWhite"/>
                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>
                    <!--(2)No of Prospects-->
                    <LinearLayout
                        android:id="@+id/ll_my_leads_performance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_8dp"
                        android:background="@color/colorPrimary"
                        android:elevation="@dimen/size_4dp"
                        android:orientation="vertical"
                        android:padding="@dimen/size_4dp">


                        <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:lines="2"
                            android:text="My Leads"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_20sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/greyWhite"
                                    android:textSize="@dimen/text_size_12sp" />
                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_size_12sp"
                                    android:textColor="@color/greyWhite"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--2nd-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--(3)No of Sanction-->
                    <LinearLayout
                        android:id="@+id/ll_my_prospects_performance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_8dp"
                        android:background="@color/colorPrimary"
                        android:elevation="@dimen/size_4dp"
                        android:orientation="vertical"
                        android:padding="@dimen/size_4dp">

                        <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:lines="2"
                            android:text="My Prospects"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_20sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/greyWhite"
                                    android:textSize="@dimen/text_size_12sp" />
                                <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/text_size_12sp"
                                    android:textColor="@color/greyWhite"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>


</RelativeLayout>