<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_150dp"
    android:orientation="horizontal"
    android:background="@color/black_overlay_2"
    android:weightSum="1">
    <TextView
        android:id="@+id/tv_photo_text"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/size_2dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Profile Picture"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18dp" />
    <ImageView
        android:id="@+id/img_atach_pp"
        android:layout_width="@dimen/size_160dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_capture_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15dp"
            android:text="Capture" />

        <Button
            android:id="@+id/btn_choose_pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15dp"
            android:text="choose" />
    </LinearLayout>

</LinearLayout>