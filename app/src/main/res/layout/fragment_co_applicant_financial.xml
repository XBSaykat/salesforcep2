<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<FrameLayout
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".masum.fragment.prospect.co_applicant.CoApplicantFinancialFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize"

        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">



        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Monthly Net Salary" />

            <!--<Spinner android:id="@+id/spinner_monthly_net_salary"-->
            <!--android:drawSelectorOnTop="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0"-->
            <!--android:textSize="20sp"-->
            <!--android:entries="@array/monthly_net_salary_array"/>-->


            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/awe_spinner_co_applicant_monthly_net_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spinnerDirection="ltr"
                app:spinnerHint="Select Salary" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <EditText
                android:id="@+id/et_co_applicant__monthly_net_salary_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Monthly Business Income" />

            <EditText
                android:id="@+id/et_co_applicant_monthly_business_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Monthly Rental Income" />

            <!--<Spinner android:id="@+id/spinner_monthly_rental_income"-->
            <!--android:drawSelectorOnTop="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0"-->
            <!--android:textSize="20sp"-->
            <!--android:entries="@array/monthly_rental_income"/>-->

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/awe_spinner_co_applicant_monthly_rental_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spinnerDirection="ltr"
                app:spinnerHint="Select Rental Income" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <EditText
                android:id="@+id/et_co_applicant_monthly_rental_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>


        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Agricultural-Income(Only for Govt. Service holders others than teachers)" />

            <EditText
                android:id="@+id/et_co_applicant_agricultural_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice/Consultancy/Tution" />

            <EditText
                android:id="@+id/et_co_applicant_practice_consultancy_tution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Remittance(Only for NRB Clients)" />

            <EditText
                android:id="@+id/et_co_applicant_remittance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_required"
                android:text="Interest Income" />

            <EditText
                android:id="@+id/et_co_applicant_interest_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:textSize="@dimen/text_size_16sp"
                android:inputType="number"/>


        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Monthly Family Expenditure" />

            <EditText
                android:id="@+id/et_co_applicant_total_monthly_family_expenditure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/LayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total EMI of other Loans" />

            <EditText
                android:id="@+id/et_co_applicant_emi_of_other_loans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginBottom="?attr/actionBarSize"

                />
        </LinearLayout>



    </LinearLayout>
</FrameLayout>
</ScrollView>

