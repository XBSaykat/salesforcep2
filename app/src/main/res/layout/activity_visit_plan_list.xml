<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".masum.mylead.MyLeadActivity">



        <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



            <LinearLayout
                android:id="@+id/linear_layout_my_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/size_45dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/size_4dp"
                    android:src="@drawable/ic_back" />


                <android.support.v7.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="3"
                    android:background="@color/colorPrimary"
                    android:focusable="false"
                    app:divider="@color/green"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Activity"
                    android:shadowColor="@color/white"

                    app:searchIcon="@null" />

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/size_45dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/size_4dp"
                    android:src="@drawable/ic_add" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>


        <TextView
            android:id="@+id/emtyHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:gravity="center"
            android:text="No data found"
            android:textSize="@dimen/text_size_24sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMyLead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>
</layout>

