<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="net.maxproit.idlc.model.newprospect.Verification" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Virification">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar">

            <LinearLayout
                android:id="@+id/basicInfoLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="ForcastedIncrease" />

                    <EditText
                        android:id="@+id/MeetingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={model.forcastedIncrease}"
                        android:textSize="@dimen/text_size_16sp" />

                </LinearLayout>
                <!--Meeting Date-->

                <!--Follow up Date -->

                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="FullTime Employees" />


                    <EditText
                        android:id="@+id/FollowupDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={model.fullTimeEmployees}"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>
                <!--Follow up Date-->

                <!--Visit purpose -->


                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="MenEmployees" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={model.menEmployees}"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>
                <!--Visit Purpose-->

                <!--Remarks -->
                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PartTime Employees" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={model.partTimeEmployees}"
                        android:textSize="@dimen/text_size_16sp" />


                </LinearLayout>

                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="succeedTo" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={model.succeedTo}"
                        android:textSize="@dimen/text_size_16sp" />


                </LinearLayout>

                <LinearLayout
                    style="@style/LayoutQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Women Employees" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={model.womenEmployees}"
                        android:textSize="@dimen/text_size_16sp" />


                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/ic_done"
                    app:fabCustomSize="@dimen/size_40dp"
                    app:fabSize="normal" />


                <!--Remarks-->


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</layout>