<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp"
        android:padding="@dimen/size_8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_dialog_cif_number"
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="@dimen/size_8dp"
            android:text="Enter CIF Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_dialog_cif_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="CIF Number"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialog_cif_number"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_cif_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_cif_number" />

        <Button
            android:id="@+id/btn_dialog_cif_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="@+id/et_dialog_cif_number"
            app:layout_constraintTop_toBottomOf="@+id/et_dialog_cif_number" />

        <Button
            android:id="@+id/btn_dialog_cif_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Cancel"
            app:layout_constraintEnd_toStartOf="@+id/btn_dialog_cif_submit"
            app:layout_constraintTop_toBottomOf="@+id/et_dialog_cif_number" />


    </android.support.constraint.ConstraintLayout>


</layout>



