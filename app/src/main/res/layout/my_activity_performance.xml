<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/black_overlay_2"
android:orientation="horizontal">

<!--(1)No of Leads-->
<LinearLayout
    android:id="@+id/btnFreshCall"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8dp"
    android:layout_weight="1"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/size_4dp"
    android:orientation="vertical"
    android:padding="@dimen/size_4dp">


    <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:lines="2"
        android:text="Fresh Call"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                android:id="@+id/tv_fresh_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/greyWhite"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<!--(2)No of Prospects-->
<LinearLayout
    android:id="@+id/btnDevVisit"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_8dp"
    android:layout_weight="1"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/size_4dp"
    android:orientation="vertical"
    android:padding="@dimen/size_4dp">


    <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="2"
        android:text="Developer Visit"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                android:id="@+id/tv_dev_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/greyWhite"
                android:textSize="@dimen/text_size_12sp" />

            <net.maxproit.salesforce.custom.textView.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/greyWhite"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
